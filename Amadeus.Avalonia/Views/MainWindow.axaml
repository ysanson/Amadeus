<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Amadeus.Avalonia.ViewModels;assembly=Amadeus.Avalonia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Amadeus.Avalonia.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Amadeus.Avalonia">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
	<Border Padding="15">
		<StackPanel Orientation="Vertical" Spacing="30">
			<StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center" Height="30">
				<Image Source="/Assets/Icons/icons8-search.png"/>
				<TextBox Watermark="Search" Width="300" />
			</StackPanel>
		
			<WrapPanel HorizontalAlignment="Left" VerticalAlignment="Top">
			
			</WrapPanel>
		</StackPanel>
	</Border>
	

</Window>
